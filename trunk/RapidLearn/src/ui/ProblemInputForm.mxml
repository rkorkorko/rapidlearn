<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" width="400" height="460"  backgroundColor="#C9DEEF"> 

	<!-- Need to script: 
		1. number of choices to display after dropdown  -- I THINK this works
		2. population of the concepts dropdown
		3. problem upload -->
	<mx:Script>
		<![CDATA[
			import flash.events.Event;

			private function changeEvt(event:Event):void {
			 	var numChoices:int = event.currentTarget;
			 	switch (numChoices){
			 		case 2:
			 			ch3.setVisible(False);
			 			ch4.setVisible(False);
			 			ch4.setVisible(False);
			 			break;
			 		case 3:
			 			ch3.setVisible(True);
			 			ch4.setVisible(False);
			 			ch4.setVisible(False);
			 			break;
			 		case 4:
			 			ch3.setVisible(True);
			 			ch4.setVisible(True);
			 			ch4.setVisible(False);
			 			break;
			 		case 5:
			 			ch3.setVisible(True);
			 			ch4.setVisible(True);
			 			ch4.setVisible(True);
			 			break;
			}
		]]>
	</mx:Script>
	
